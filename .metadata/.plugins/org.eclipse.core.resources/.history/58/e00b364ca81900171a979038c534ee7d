package com.datastructure;

public class PairNode {

	public int element;
	public PairNode firstChild;
	public PairNode leftSibling;
	public PairNode rightSibling;
	public PairNode leftChild;
	public PairNode rightChild;
	public int freq;

	/* Constructor */
	public PairNode(int node, int freq, PairNode firstChild,
			PairNode leftSibling, PairNode rightSibling, PairNode leftChild,
			PairNode rightChild) {
		this.freq = freq;
		this.element = node;
		firstChild = null;
		leftSibling = null;
		rightSibling = null;
		this.leftChild= leftChild;
	}

	public PairNode() {
		// TODO Auto-generated constructor stub
		super();
	}
}
